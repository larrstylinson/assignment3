<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>City Info</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            justify-content: center;
            align-items: center;
        }

        .background-image {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .navbar {
            background-color: #FFFFFF7F;
            width: 100%;
            height: 53px;
            margin: 20px auto;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

        .navbar a {
            text-decoration: none;
            color: black;
            font-weight: bold;
            font-size: 23px;
            margin-left: 20px;
            margin-right: 50px;
        }

        h1 {
            font-family: Andale, monospace;
            font-size: 45px;
            margin-top: 10px;
        }

        form {
            text-align: center;
            background-color: #FFFFFFCC;
            padding: 20px;
            border-radius: 10px;
            box-shadow: #00000019;
            margin-top: 20px;
            width: 312px;
            height: 500px;
        }

        form label {
            margin-top: -5px;
            font-family: Impact, monospace;
            font-size: 26px;
            display: contents;
            margin-bottom: 2px;
            margin-right: 182px;
        }

        form input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        form input[type="submit"] {
            width: 36%;
            padding: 7px;
            border-color: black;
            border-radius: 10px;
            background-color: #578591;
            color: black;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: -1px;
        }

        form input[type="submit"]:hover {
            background-color: #7ba4b6;
        }

        #cityInfo {
            font-family: Impact, sans-serif;
            font-size: 26px;
        }


        .no-info {
            font-size: 18px;
            color: red;
        }

        footer {
            margin-top: auto;
            background-color: #FFFFFF66;
            text-align: center;
            font-style: italic;
            border-top: 1px solid #cccccc;
            width: 100%;
            height: 43px;
        }
    </style>
</head>
<body>
<img src="/pics/pic3.jpg" alt="Background Image" class="background-image">
<div class="navbar">
    <a href="/register">Register</a>
    <a href="/weather">Weather</a>
    <a href="/city">Photo</a>
    <a href="/admin">Admin Page</a>
    <a href="/get-time">Time</a>
    <a href="/history">History</a>
    <a href="/admin">admin</a>

</div>
<form id="cityForm" action="/city-info" method="POST">
    <h1>City Information</h1>
    <label for="city">Enter city name:</label>
    <input type="text" id="city" name="city">
    <input type="submit" value="Get City Info">
    <div id="cityInfo" class="city-info">
        <% var cityInfo;
        if (cityInfo) { %>
            <p>Name: <%= cityInfo.name %></p>
            <p>Country: <%= cityInfo.country %></p>
            <p>Population: <%= cityInfo.population %></p>
        <% } else { %>
            <p class="no-info">No information</p>
        <% } %>
    </div>
</form>
<script>
    const cityForm = document.getElementById('cityForm');
    const cityInfoDiv = document.getElementById('cityInfo');

    cityForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        const formData = new FormData(cityForm);
        const cityName = formData.get('city');

        try {
            const response = await fetch('/city-info', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({city: cityName})
            });
            const data = await response.json();

            if (data.cityInfo) {
                const {name, country, population} = data.cityInfo;
                cityInfoDiv.innerHTML = `
                    <p>Name: ${name}</p>
                    <p>Country: ${country}</p>
                    <p>Population: ${population}</p>
                `;
            } else {
                cityInfoDiv.innerHTML = '<p class="no-info">No information</p>';
            }
        } catch (error) {
            console.error('Error fetching city information:', error);
            cityInfoDiv.innerHTML = '<p class="no-info">Server Error</p>';
        }
    });
</script>
<footer>
    <p>Omar Marzhan SE-2230</p>
</footer>
</body>
</html>
